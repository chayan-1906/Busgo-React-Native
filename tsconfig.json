{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react-native-css-interop",
    "baseUrl": "./",
    "allowImportingTsExtensions": true,
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "types": [
      "nativewind/types",
      "node"
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "expo-env.d.ts",
    ".expo/types/**/*.ts",
    "src/types/**/*.d.ts",
    "nativewind-env.d.ts"
  ]
}
